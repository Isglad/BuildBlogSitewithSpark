{{#partial "title"}}{{ title }}{{/partial}}

{{#partial "content"}}
    <header>
        <div class="container">
            <div class="site-header">
                <a class="logo" href="/">SparkBlog</a>
                <!-- Link to add new entry   -->
                <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
            </div>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="new-entry">
                <h2>Publish New Entry</h2>
                <form action="/entries" method="post">
                    <label for="title"> Title</label>
                    <input type="text" name="title" id="title"><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="content" id="content"></textarea>
                    <label for="tags">Tags (separate by comma)</label>
                    <input type="text" name="tags" id="tags">
                    <input type="submit" value="Publish Entry" class="button">
                    <a href="/" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{#partial "footer"}}
    <footer>
        <div>
            <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
            <a href="#">Terms</a>
        </div>
    </footer>
{{/partial}}

