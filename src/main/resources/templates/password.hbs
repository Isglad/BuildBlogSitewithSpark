{{#partial "title"}}{{ title }}{{/partial}}

{{#partial "content"}}
    <header>
        <div class="container">
            <div class="site-header">
                <a class="logo" href="/">SparkBlog</a>
                <!-- Link to add new entry   -->
                <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
            </div>
        </div>
    </header>
    <!-- Displaying a full blog post content    -->
    <section>
        <div class="container">
            <div class="password">
                <form action="/password" method="post">
                    <label for="password">Enter Password</label>
                    <input type="password" name="password" id="password"><br>
                    <input type="submit" value="Submit" class="button">
                    <a href="/entries" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}
{{#partial "footer"}}
    <footer>
        <div>
            <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
            <a href="#">Terms</a>
        </div>
    </footer>
{{/partial}}


